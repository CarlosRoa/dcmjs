{
  "name": "dcmjs",
  "version": "0.5.0",
  "description": "Javascript implementation of DICOM manipulation",
  "main": "build/dcmjs.js",
  "module": "build/dcmjs.es.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "lint": "eslint -c .eslintrc.json --fix src && prettier --tab-width 4 --write src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcmjs-org/dcmjs.git"
  },
  "author": "Steve Pieper",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dcmjs-org/dcmjs/issues"
  },
  "homepage": "https://github.com/dcmjs-org/dcmjs#readme",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-eslint": "^10.0.2",
    "eslint": "^5.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "rollup": "^1.16.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.2.4"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "acorn": "^6.1.1",
    "bl": "^3.0.0",
    "loglevelnext": "^3.0.1",
    "ndarray": "^1.0.18",
    "semver": "^6.2.0",
    "yargs": "^13.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --tab-width 4 --write",
      "git add"
    ]
  }
}
